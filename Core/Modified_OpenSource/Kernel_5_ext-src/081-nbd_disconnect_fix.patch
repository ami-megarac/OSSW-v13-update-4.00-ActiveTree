+static int ami_nbd_disconnect(struct nbd_device *nbd)
+{
+	blk_mq_quiesce_queue(nbd->disk->queue);
+	blk_mq_tagset_busy_iter(&nbd->tag_set, ami_abort_cmd, nbd);
+	blk_mq_unquiesce_queue(nbd->disk->queue);
+	return 0;
+}
